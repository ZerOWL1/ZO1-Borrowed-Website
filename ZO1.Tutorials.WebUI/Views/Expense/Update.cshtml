@model ZO1.Tutorials.Services.ViewModels.Expenses.CreateExpenseViewModels

@{
    ViewBag.Title = "U-Expense";
    Layout = "_Layout";
}


<form method="post" asp-action="Update">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Update Item</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CreateExpenseViewModel.ExpenseName"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="CreateExpenseViewModel.Amount"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="CreateExpenseViewModel.ExpenseTypeId"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <input asp-for="CreateExpenseViewModel.Id" class="form-control" hidden=""/>
                    <div class="col-4">
                        <input asp-for="CreateExpenseViewModel.ExpenseName" class="form-control"/>
                        <span asp-validation-for="CreateExpenseViewModel.ExpenseName"></span><br/>
                    </div>
                    <div class="col-4">
                        <input asp-for="CreateExpenseViewModel.Amount" class="form-control"/>
                        <span asp-validation-for="CreateExpenseViewModel.Amount"></span><br/>
                    </div>
                    <div class="col-4">
                        <select asp-for="CreateExpenseViewModel.ExpenseTypeId" asp-items="Model.ExpenseTypesDropDown" 
                                class="form-control">
                            <option selected="">-- Select Expense Type --</option>
                        </select>
                        <span asp-validation-for="CreateExpenseViewModel.ExpenseTypeId"></span><br/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}