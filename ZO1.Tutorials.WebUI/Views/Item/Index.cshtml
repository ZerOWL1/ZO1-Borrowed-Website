@model List<ZO1.Tutorials.Services.ViewModels.Items.CreateItemViewModel>
@{
    ViewData["Title"] = "Item";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Borrowed Items List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-success text-decoration-none" 
               asp-controller="Item" asp-action="Create">
                Create new Item
            </a>
        </div>
    </div>
    <br/>
    @if (Model.Count > 0)
    {
        
            <table class="table table-bordered table-striped" style="width: 100%">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Item Name</th>
                    <th>Borrower</th>
                    <th>Lender</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="30%">@item.Id</td>
                        <td width="30%">@item.ItemName</td>
                        <td width="30%">@item.BorrowerName</td>
                        <td width="30%">
                            @if (!string.IsNullOrEmpty(item.Lender))
                            {
                                <span>@item.Lender</span>
                            }
                            else
                            {
                                <span>Unknown</span>
                            }
                        </td>
                    </tr>
                }
                </tbody>
            </table>
    }
    else
    {
        <p>No items create yet.</p>
    }
</div>

